@model IEnumerable<Firma.Data.Data.CMS.Strona>
<div class="nav-wrapper container">
    <a id="logo-container" href="#" class="brand-logo">Logo</a>

    <!-- Menu -->
    <ul class="right hide-on-med-and-down">
        @*link do Home w menu ustawiony na sztywno*@
        <li><a href="/" class="nav-link text-dark">Home</a></li>
        @foreach(var item in Model)
        {
            @*<li>@Html.ActionLink(item.LinkTytul, "Index", "Home", new { id = item.IdStrony }, null)</li>*@
            @*wersję poniżej łatwiej stylować*@

            @*zapobiega dublowaniu się linku do Home w menu*@
            @if(item.LinkTytul == "Home") continue;
            <li><a class="nav-link text-dark" asp-controller="Home" asp-action="Index" asp-route-id="@item.IdStrony">@item.LinkTytul</a></li>
        }
        <li>@Html.ActionLink("Shop","Promocje","Sklep");</li>
    </ul>

    <!-- Mobile menu -->
    <ul id="nav-mobile" class="sidenav">
        <li><a href="/">Home</a></li>
        @foreach(var item in Model)
        {
            @if(item.LinkTytul == "Home") continue;
            <li><a asp-controller="Home" asp-action="Index" asp-route-id="@item.IdStrony">@item.LinkTytul</a></li>
        }
        <li>@Html.ActionLink("Shop","Promocje","Sklep");</li>
    </ul>

    <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
</div>